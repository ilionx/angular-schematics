{
  "packages": [
    "packages/*",
    "sandbox"
  ],
  "version": "0.0.4",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "createRelease": "github",
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    },
    "version": {
      "push": true,
      "createRelease": "github",
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    }
  }
}
